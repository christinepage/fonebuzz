<h2>Initiate a new call</h2>

<!-- entry form for new call -->
<%= render 'new' %>     
<br>
<hr>
<!-- display previous calls -->
<%= render 'list' %>
<br>

<!-- Display notices and errors -->
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="field_with_errors">
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li> <%= error %> </li>
  <% end %>
<% end %>
</div>
